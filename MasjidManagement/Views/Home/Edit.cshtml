@model MasjidManagement.ViewModels.MusolliEditViewModel


@{

    ViewBag.Title = "Edit Musolli";
}


<form asp-controller="home" asp-action="edit" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
   
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<MasjidManagement.Models.Dept>()">

                <option value="">please select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index"
               class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
