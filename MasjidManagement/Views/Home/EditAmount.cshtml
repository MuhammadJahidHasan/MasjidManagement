@model MasjidManagement.ViewModels.ViewEditAmount


@{
    ViewBag.Title = "Edit Amount";
}


    <form asp-controller="home" asp-action="editAmount" class="mt-3">
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Date" class="form-control" placeholder="Name">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Amount" class="form-control" placeholder="Amount">
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
    
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="home" asp-action="viewamount"
                   class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
