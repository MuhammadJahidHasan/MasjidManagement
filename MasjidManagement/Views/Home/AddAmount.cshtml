@model MasjidManagement.View_Models.ViewAddAmount

@{ 

    ViewBag.Title = "Add Amount";
}


    <form asp-controller="home" asp-action="AddAmount" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Date" class="form-control" placeholder="Date">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Amount" class="form-control" placeholder="Amount">
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>