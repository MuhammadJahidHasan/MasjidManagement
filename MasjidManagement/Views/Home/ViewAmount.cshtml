
@model MasjidManagement.Models.Musolli
@{

    ViewBag.Title = "Amount";
    ViewBag.Id = @Model.Id;
}

<table class="table" style="text-align:center;">

    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Action Item</th>
        </tr>

    </thead>
    <tbody>

      @for (int i = 0; i < Model.ListAmount.Count; i++)
      {
        <tr>

            <td>@Model.ListAmount[i].Date</td>
            <td>@Model.ListAmount[i].Amount</td>

            <td>
                <a asp-controller="home" asp-action="editamount" 
                  asp-route-id="@i" class="btn btn-primary m-1">Edit</a>
                <a class="btn btn-danger m-1">Delete</a>
            </td>
        </tr>
      }
    </tbody>

</table>

@section Scripts{
    <script src="~/Js/CustomScript.js"></script>

}
